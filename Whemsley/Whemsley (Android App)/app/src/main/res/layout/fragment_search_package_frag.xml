<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="26sp"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context="com.example.dimpy.whemsley.searchPackage_frag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26sp"
        android:orientation="vertical"
        android:padding="16sp">

        <TextView
            android:id="@+id/textView_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="Either submit by tapping the floating button \n OR \n scan Barcode by clicking on the button below"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginTop="16sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/scan_button"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_below="@id/textView_0"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/colorHoloText"
                android:scaleType="fitCenter"
                android:src="@drawable/shape" />

            <EditText
                android:id="@+id/editText_01"
                android:layout_width="0sp"
                android:layout_height="80dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Stamp Number\n\n"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textColor="@color/colorPrimaryDark" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:src="@android:drawable/ic_menu_view" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="16sp"
            android:text="\n\n\n\n\nAll details of the package, shall appear here \n\n\n\n\n"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_text" />

    </LinearLayout>
</ScrollView>